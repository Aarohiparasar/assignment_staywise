{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts",
    "App.ts",
    "Controllers/**/*.ts",
    "MODELS/**/*.ts",
    "ROUTERS/**/*.ts",
    "Middleware/**/*.ts",
    "DB/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
